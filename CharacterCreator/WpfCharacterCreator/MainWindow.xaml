            <Grid Grid.Row="1" Grid.Column="1">
                <Label Style="{StaticResource AboveLabel}" Content="User"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2">
                <Label Style="{StaticResource AboveLabel}" Content="Access Type"/>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <ComboBox x:Name="comboFriendShare" 
                          
                 />
            </Grid>
            <Grid Grid.Row="2" Grid.Column="2">
                <ComboBox x:Name="comboAccessType">
                    <ComboBoxItem Content="Viewer"/>
                    <ComboBoxItem Content="Editor"/>
