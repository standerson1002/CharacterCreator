                                        <Button x:Name="btnUpdateInterest" Style="{StaticResource NormalButton}" Content="Update Like / Dislike" Click="btnUpdateInterest_Click"/>
                                    </Grid>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Add Like or Dislike">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1.25*"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="2*"/>
                                        <RowDefinition Height="1.75*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <Label Style="{StaticResource LeftLabel}" Content="Like or Dislike:"/>
                                    </Grid>
                                    <Grid Grid.Row="0" Grid.Column="2">
                                        <ComboBox x:Name="comboLikeDislike">
                                            <ComboBoxItem Content="Like"/>
                                            <ComboBoxItem Content="Dislike"/>
                                        </ComboBox>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="0">
                                        <Label Style="{StaticResource LeftLabel}" Content="Thing:"/>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                                        <TextBox x:Name="textLikeDislikeName" Style="{StaticResource TextBoxDescription}"/>
                                    </Grid>

                                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                        <Label Style="{StaticResource AboveLabel}" Content="Description:"/>
                                    </Grid>
                                    
                                    <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                                        <TextBox x:Name="textAddLikeDislikeDescription" Style="{StaticResource TextBoxDescription}"/>
                                    </Grid>


                                    <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                                        <Button x:Name="btnAddLikeOrDislike" Click="btnAddLikeOrDislike_Click" Style="{StaticResource NormalButton}" Content="Add Like or Dislike"/>
                                    </Grid>
                                    
                                </Grid>
                            </TabItem>
                        </TabControl>
                        
                    </TabItem>
                    
                    
                    <TabItem x:Name="tabDeactivateCharacter" Header="DEACTIVATE" Foreground="Red">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                <Label Style="{StaticResource Header}" Content="Deactivate Character?"/>
                            </Grid>
                            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                <TextBlock Style="{StaticResource WarningTextBlock}" Text="Are you sure you want to deactivate this character? This action cannot be undone!" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red"/>
                            </Grid>
                            <Grid Grid.Row="2" Grid.Column="0">
                                <Label Style="{StaticResource LeftLabel}" Content="Verify Password"/>
                            </Grid>
                            <Grid Grid.Row="2" Grid.Column="1">
                                <PasswordBox x:Name="pwdDeactivateCharacter" Style="{StaticResource WarningPasswordBox}"/>
                            </Grid>
                            <Grid Grid.Row="3" Grid.ColumnSpan="2">
                                <Button x:Name="btnDeactivateCharacter" Style="{StaticResource WarningButton}" Content="Deactivate Character" Click="btnDeactivateCharacter_Click"/>
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>

            
            </Grid>
                
        </Grid>

        <!-- Share Character -->
        <Grid x:Name="gridShareCharacter" Grid.Row="1" Grid.Column="1" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
                <Label x:Name="lblShareCharacterName" Style="{StaticResource Header}" Content="Share Character"/>
