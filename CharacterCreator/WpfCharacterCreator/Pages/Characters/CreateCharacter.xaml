<Page x:Class="WpfCharacterCreator.Pages.Characters.CreateCharacter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfCharacterCreator.Pages.Characters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateCharacter">

    <!-- Create New Character -->
    <Grid Style="{StaticResource BoxGrid}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="Choose a Name For Your New Character" Style="{StaticResource SecondaryTitleLabel}"/>
        
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="txtPickNameForNewCharacter"/>

        <Button Grid.Row="4" Grid.Column="1" x:Name="btnCreateCreateNewCharacter" Click="btnCreateCreateNewCharacter_Click" Content="Create" Style="{StaticResource CallToAction}"/>
        <Button Grid.Row="4" Grid.Column="2" x:Name="btnCancelCreateNewCharacter" Click="btnCancelCreateNewCharacter_Click" Content="Cancel" Style="{StaticResource BackButton}"/>

    </Grid>
</Page>
