@model DataDomain.UserCharacter

@{
    ViewData["Title"] = "Create";
}

<h2>Create a New Character</h2>

<hr />
<div class="card shadow">
    <div class="card-header">
        <h4 class="card-title">Pick a name for your character:</h4>
        <h6 class="text-muted mb-2 text-body-secondary">(You can change this later)</h6>
    </div>
    <div class="card-body">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
                <div class="form-group" hidden>
                    <label asp-for="CreatorID" class="control-label"></label>
                    <input asp-for="CreatorID" class="form-control" value="x"/>
                    <span asp-validation-for="CreatorID" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="CharacterName" class="control-label"></label>
                    <input asp-for="CharacterName" class="form-control" maxlength="50"/>
                    <span asp-validation-for="CharacterName" class="text-danger"></span>
                </div>
            
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
