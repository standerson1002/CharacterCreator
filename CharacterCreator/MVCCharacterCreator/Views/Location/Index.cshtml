@model IEnumerable<DataDomain.Locations.Location>

@{
    ViewData["Title"] = "Locations";
}

<h1>Locations</h1>

<p class="lead">Now introducing Location Creator!</p>

<hr class="hr" />
<div class="d-grid gap-2 mb-3">
    <a asp-action="Create" class="btn btn-outline-primary btn-block">Create New Location</a>
</div>
@if(@Model.Count() != 0)
{
    <table class="table table-striped table-hover">
    <caption>Total Locations: @Model.Count()</caption>
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.LocationName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.LocationCountry)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.LocationSubdivision)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.LocationCity)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
    @foreach (var item in Model) {
        <tr>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationSubdivision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationCity)
            </td>
            <td align="right">
                @Html.ActionLink("Details", "Details", new { id = item.LocationID }, new { @class = "btn btn-outline-primary" })
                @Html.ActionLink("Edit", "Edit", new { id=item.LocationID }, new { @class="btn btn-outline-warning"})
                @Html.ActionLink("Delete", "Delete", new { id = item.LocationID }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }
    </tbody>
</table>
}
else
{
    <h5 class="text-warning">You don't have any locations yet!</h5>
}